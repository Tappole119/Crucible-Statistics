<p id="notice"><%= notice %></p>

<h1>Guardians</h1>

<div>
<%= form_tag players_path, :method => "get" do %>
  <p>
    <%= text_field_tag :Psearch, params[:Psearch] %>
    <%= submit_tag "PSearch", :DisplayName => nil %>
    <%= text_field_tag :Xsearch, params[:Xsearch] %>
    <%= submit_tag "XSearch", :DisplayName => nil %>
  </p>
<% end %>
</div>
<table>
  <thead>
    <tr>
      <th>Displayname</th>
      <th>Memberid</th>
      <th>Membertype</th>
      <th>Characterid</th>
      <th>Playertype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.DisplayName %></td>
        <td><%= player.MemberId %></td>
        <td><%= player.Membertype %></td>
        <td><%= player.CharacterId %></td>
        <td><%= player.Playertype %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>
